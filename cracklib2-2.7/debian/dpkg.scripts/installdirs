#   Distributed under the GNU GENERAL PUBLIC LICENSE.
#
# synopsis:
#   . installdirs
#
# description:
#   Install package directories.
#
#   This program is package dependent.


install_dirs_override()
# postconditions:
#   Return 0 if successful, non-zero if not.
#
# description:
#   Gets original source and places it in standard debian archive.
{
  install_dirs


  if [ "${pkglib}" = "${DH_DOPACKAGES}" ]
  then
    #
    # Install standard directories.
    #
    (
      d_pkg_doc="${d_pkglib_doc}"
      d_pkg_docbase="${d_pkglib_docbase}"
      d_pkg_man="${d_pkglib_man}"

      install_dirs
    )

    install -d -m 0755 ${DH_TMPDIR}${d_pkglib_lib}
  elif [ "${pkgdev}" = "${DH_DOPACKAGES}" ]
  then
    #
    # Install standard directories.
    #
    (
      d_pkg_doc="${d_pkgdev_doc}"
      d_pkg_docbase="${d_pkgdev_docbase}"
      d_pkg_man="${d_pkgdev_man}"

      install_dirs
    )

    install -d -m 0755 ${DH_TMPDIR}${d_pkgdev_include}
    install -d -m 0755 ${DH_TMPDIR}${d_pkgdev_lib}
    install -d -m 0755 ${DH_TMPDIR}${d_pkgdev_man}/man3

    install -d -m 0755 ${DH_TMPDIR}${d_pkgdev_doc_examples}
  elif [ "${pkgruntime}" = "${DH_DOPACKAGES}" ]
  then
    #
    # Install standard directories.
    #
    (
      d_pkg_doc="${d_pkgruntime_doc}"
      d_pkg_docbase="${d_pkgruntime_docbase}"
      d_pkg_man="${d_pkgruntime_man}"

      install_dirs
    )

    install -d -m 0755 ${DH_TMPDIR}${d_host_etc}
    install -d -m 0755 ${DH_TMPDIR}${d_host_etc_crondaily}
    install -d -m 0755 ${DH_TMPDIR}${d_host_var}

    install -d -m 0755 ${DH_TMPDIR}${d_pkgruntime_bin_s}
    install -d -m 0755 ${DH_TMPDIR}${d_pkgruntime_etc}
    install -d -m 0755 ${DH_TMPDIR}${d_pkgruntime_man}/man8

#      install -d -m 0755 ${DH_TMPDIR}${d_pkgruntime_var}
#      install -d -m 0755 ${DH_TMPDIR}${d_pkgruntime_cache_base}
    install -d -m 0755 ${DH_TMPDIR}${d_pkgruntime_cache}
  else
    echo "${0}: unknown package..."
    exit 1
  fi


  return 0
}
