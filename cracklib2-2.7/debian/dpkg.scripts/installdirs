#!/bin/sh
#
# source:
#   /var/cvs/projects/debian/cracklib/debian/dpkg.scripts/installdirs,v
#
# revision:
#   @(#) installdirs,v 1.1 1999/03/29 15:16:16 jplejacq Exp
#
