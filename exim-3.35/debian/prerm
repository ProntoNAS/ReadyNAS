#!/bin/sh -e

case "$1" in
	remove|upgrade|remove-in-favour|deconfigure-in-favour)

		# Stop running exim
		/etc/init.d/exim stop

                # Disable in inetd
                update-inetd --comment-chars \#disabled\# --disable smtp

		# Remove /usr/doc symlink
		if [ -L /usr/doc/exim ]; then
		    rm -f /usr/doc/exim
		fi
		;;

        failed-upgrade)
		;;
esac

