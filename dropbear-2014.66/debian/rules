#!/usr/bin/make -f

DESTDIR = $(CURDIR)/debian/dropbear

%:
	dh $@

override_dh_auto_build:
	$(MAKE) MULTI=1 PROGRAMS="dbclient dropbear dropbearconvert" -j4

override_dh_auto_install:
	mkdir -p $(DESTDIR)/usr/bin
	install -m 0755 dropbearmulti $(DESTDIR)/usr/bin

override_dh_clean:
	dh_clean
	-rm config.log config.status libtommath/Makefile libtomcrypt/Makefile

