#! /bin/sh
# postinst script for hotplug
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see /usr/share/doc/packaging-manual/
#
# quoting from the policy:
#     Any necessary prompting should almost always be confined to the
#     post-installation script, and should be protected with a conditional
#     so that unnecessary prompting doesn't happen if a package's
#     installation fails and the `postinst' is called with `abort-upgrade',
#     `abort-remove' or `abort-deconfigure'.

case "$1" in
    configure)
	test -f /etc/hotplug/usb.option && . /etc/hotplug/usb.option
        rm -f /etc/hotplug/usb.option /etc/hotplug/usb.option.dpkg-old
	test -f /etc/default/hotplug.usb && . /etc/default/hotplug.usb
        . /usr/share/debconf/confmodule
	db_get hotplug/usbd_enable
	USBD_ENABLE="$RET"
	db_get hotplug/x11_usbmice_hack
	X11_USBMICE_HACK="$RET"
	db_get hotplug/static_module_list
	STATIC_MODULE_LIST="$RET"
	db_stop

	test -f /etc/default/hotplug.usb && \
	    mv -f /etc/default/hotplug.usb /etc/default/hotplug.usb.dpkg-old
	test -f /etc/default/hotplug && \
	    mv -f /etc/default/hotplug /etc/default/hotplug.dpkg-old
	cat <<USBOPTION > /etc/default/hotplug
# hotplug configuraton file
# See also /usr/share/doc/hotplug/README
# This file is automatically generated by hotplug package
#
# USBD_ENABLE=[true|false]
#  - do USB hotplugging?
USBD_ENABLE=$USBD_ENABLE
#
# STATIC_MODULE_LIST="..."
#  - which modules are preloaded?
STATIC_MODULE_LIST="$STATIC_MODULE_LIST"
#
# X11_USBMICE_HACK
#  - use USB mouse with X11?
X11_USBMICE_HACK=$X11_USBMICE_HACK
#
# END OF FILE
USBOPTION


    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

## XXX remove old system startup links
if dpkg --compare-versions "$2" lt 0.0.20010919-10 > /dev/null 2>&1; then
   rm -f /etc/rc?.d/???hotplug
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
