"""Solaris 10 (SunOS 5.10) using Studio 11 for x86."""

exec_config_file('sunos-5.8-sparc.cf')

project.AddDefines("_SOLARISX86")

project.AddDefines("_SOLARIS_HAS_GETOPT")

project.RemoveDefines("HELIX_FEATURE_ALSA")

platform.pcf_prefix_list = ['unix', 'sunos5', 'sunos-5.10', 'sunos-5.10-i386']

## setup the C compiler

cc.args['default']  = '-D__inline=  -D__inline__=  -xCC -xarch=sse'

cc.args['release']  = '-xO4 -xipo'

## setup the C++ compiler

cxx.args['default'] = ' -xarch=sse -features=%all,no%iddollar,no%localfor -xnolib'

cxx.args['release'] = '-xO4 -xipo'

if not project.BuildOption('nopic'):
    cc.args['default']  = cc.args['default'] + ' -KPIC'
    cxx.args['default']  = cxx.args['default'] + ' -KPIC'
    cc.args['dll']      = '-DPIC'
    cc.args['lib']      = '-DPIC'
    cxx.args['dll']     = '-DPIC'
    cxx.args['lib']     = '-DPIC'
    
    
class Solaris8Linkerx86(Solaris8LinkerSparc):
    def basecmd(self):
        return "CC "
# XXXNH: according to Philip Brown the stuff below is unnecessary
#        return "CC -xnolib -G -fast -xtarget=generic -xarch=386 -xO

platform.link = Solaris8Linkerx86()
