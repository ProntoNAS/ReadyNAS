import os
import sys
import string
import getopt


# Make sure we have a full build system available.
# Grab build_root from the environment: BUILD_ROOT.
try:
    build_root = os.environ["BUILD_ROOT"]
except KeyError:
    print "[ERROR] set BUILD_ROOT."
    sys.exit(1)

# Make sure we have library code.
build_lib_dir = os.path.join(build_root, "lib")
if not os.path.isdir(build_lib_dir):
    print "[ERROR] Can't find build system library, possible invalid BUILD_ROOT"
    print "or build system not properly checked out."
    sys.exit(1)

options = 'ost'    
def usage():    
    print"Usage: sign [-%s] file" % options
    print""
    print"       sign -?   for more information"
    sys.exit(1)
        

def manpage():
    # TODO: write a new build libarary man command and invoke on the file
    # BUILD_ROOT\doc\signcmd.txt. There's a sample in the buildmenu.py file.
    print"This will be a manpage soon."
    sys.exit(1)
    
    
# Parse arguments.
try:
    optlist, args = getopt.getopt( sys.argv[1:] , options + '?')
except GetoptError:
    usage()

for o, a in optlist:
    if o == '-?':
        manpage()
    elif o == '-s':
        sign_host = a        
    elif o == '-o':
        signed_component = a        
    elif o == '-t':
        sign_type = a
        
# If sign_host is not specified on the command line, try to read it from
# the environment.  If we still don't have a value, abort.
if not '-s' in optlist:        
    try:
        sign_host = os.environ["SIGN_HOST"]    
    except KeyError:
        print "[ERROR] set SIGN_HOST or use [-s sign-host] option."
        sys.exit(1)

try:
    component_path = sys.argv[1]
except IndexError:
    usage()

## add Python import paths
sys.path.insert(0, build_lib_dir)
import signclient
## end bootstrap


    
    
def main():
    try:
        sign_type = sys.argv[1]
    except IndexError:
        usage()
        

    try:
        signed_component_path = sys.argv[3]
    except IndexError:
        signed_component_path = component_path

    try:
        if os.path.isdir(component_path):
            ## Assume mac bundle
            b=os.path.basename(component_path)
            if not b:
                b=os.path.basename(os.path.dirname(component_path))
            b=string.split(b,".")
            component_path = os.path.join(
                component_path,
                "Contents",
                "MacOS",
                string.join(b[:-1],".") )

            ## This is ugly and should be fixed
            signed_component_path = component_path
                
        component = open(component_path, "rb").read()
    except IOError:
        print "[ERROR]: cannot read file=\"%s\"" % (component_path)
        sys.exit(1)
    
    sc = signclient.SignClient(sign_host, "", "")
    sc.SetSignType( sign_type )
    result_status, result_component = sc.GetSignedComponent(component)

    ## check status
    if result_status != 0:
        print "[ERROR]: exit status=\"%s\"" % (str(result_status))
        sys.exit(1)

    ## write signed component
    try:
        open(signed_component_path, "wb").write(result_component)
    except IOError:
        print "[ERROR]: cannot write file=\"%s\"" % (signed_component_path)
        sys.exit(1)

    sys.exit(0)

    
if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print "**break**"
    
