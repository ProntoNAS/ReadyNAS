SHELL	= /bin/sh
CC	= gcc
OPT	= -O
DEBUG	= -g
BIN	= ../../bin
MAN	= ../../man
PROGS	= $(BIN)/md5 $(BIN)/timeout
MANPAGES= $(MAN)/man1/md5.1 $(MAN)/man1/timeout.1
CFLAGS	= $(OPT) $(DEBUG) -I. $(XFLAGS)

all:	$(PROGS)

manpages: $(MANPAGES)

$(BIN)/md5: md5.o md5c.o
	$(CC) $(CFLAGS) -o $@ md5.o md5c.o

$(BIN)/timeout: timeout.o
	$(CC) $(CFLAGS) -o $@ timeout.o

$(MAN)/man1/md5.1: md5.c
	srctoman $? >$@

$(MAN)/man1/timeout.1: timeout.c
	srctoman $? >$@

clean:
	rm -f $(PROGS) *.o core *.core

depend: $(MAKES)
	(sed '1,/^# do not edit/!d' Makefile; \
	set -e; for i in [a-z][a-z0-9]*.c; do \
	    $(CC) -E $(DEFS) $(INCL) $$i | sed -n -e '/^# *1 *"\([^"]*\)".*/{' \
	    -e 's//'`echo $$i|sed 's/c$$/o/'`': \1/' -e 'p' -e '}'; \
	done) | grep -v '[.][o][:][ ][/]' >$$$$ && mv $$$$ Makefile

# do not edit below this line - it is generated by 'make depend'
md5.o: md5.c
md5.o: global.h
md5.o: md5.h
md5c.o: md5c.c
md5c.o: global.h
md5c.o: md5.h
