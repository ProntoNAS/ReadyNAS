mainmenu "Linux Kernel/Padre Configuration"

config SPARC
        bool
        default y

# Identify this as a Sparc32 build
config SPARC32
        bool
        default y

config PADRE
	bool
	default y

config MMU
	bool
	default y


source "init/Kconfig"

source "kernel/Kconfig.preempt"
source "kernel/Kconfig.hz"

menu "General setup for PADRE"

config PADRE_NONCACHESIZE
	int "Non-cacheable area for DMA (in 16Mbyte units)"
	help
	  this number is mutiple by 16M

config PADRE_STACK_16K
	bool "support 16K kernel stack"

choice
	prompt "padre page size"
	default PADRE_4K_PAGE

	config PADRE_4K_PAGE
		bool "support 4k page size"

	config PADRE_8K_PAGE
		bool "support 8k page size"

	config PADRE_16K_PAGE
		bool "support 16k page size"

	config PADRE_RESERVE_DMA
		bool "reserve DMA memory for page table"
		depends PADRE_16K_PAGE
		
endchoice

#config PADRE_BLK
#	bool "padre blk device support"

#config BLK_DEV_PADREDISK
#	bool
#	default y	

config RWSEM_GENERIC_SPINLOCK
	bool
	default y

config RWSEM_XCHGADD_ALGORITHM
        bool

config GENERIC_FIND_NEXT_BIT
        bool
        default y

config GENERIC_HWEIGHT
        bool
        default y

config GENERIC_CALIBRATE_DELAY
        bool
        default y

config PADRE_SERIAL
        bool
	default y
	
config PADRE_SERIAL_CONSOLE
        bool
	default y

config SERIAL_CORE
        bool
	default y

config SERIAL_CORE_CONSOLE
        bool
	default y

