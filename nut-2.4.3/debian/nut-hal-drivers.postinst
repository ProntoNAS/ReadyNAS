#!/bin/sh

set -e

case "$1" in

  configure)
    # ask udev to check for new udev rules
    [ -x /etc/init.d/udev ] && pidof udevd > /dev/null \
		&& udevadm trigger --action=change
    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    # do nothing
    ;;

  *)
    echo "$0: incorrect arguments: $*" >&2
    exit 1
    ;;

esac

