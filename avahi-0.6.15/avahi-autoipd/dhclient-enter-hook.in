case "$reason" in
    MEDIUM|ARPCHECK|ARPSEND|NBI)
        ;;

    PREINIT|BOUND|RENEW|REBIND|REBOOT|STOP)
        @sbindir@/avahi-autoipd -k $interface 2> /dev/null
        ;;
    
    EXPIRE|FAIL|RELEASE|TIMEOUT)
        # Starting avahi-autoipd is left for the exit hook
        ;;
esac
