#!/bin/sh

pkg=libpdap2

set -e

update_ldconfig() {
	if [ -x /sbin/ldconfig ] ; then
		ldconfig
	fi
}

update_doclink() {
	if [ -d /usr/doc -a ! -e /usr/doc/$pkg -a -d /usr/share/doc/$pkg ] ; then
		ln -s ../share/doc/$pkg /usr/doc/$pkg
	fi
}

if [ "$1" = "configure" -o "$1" = "abort-upgrade" ] ; then
	update_ldconfig
	update_doclink
fi

exit 0

