#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/makefile.mk

DEB_MAKE_INSTALL_TARGET = install DESTDIR=$(CURDIR)/debian/pwauth

DEB_DH_INSTALLPAM_ARGS = --name=apache2

binary-fixup/pwauth::
	rm $(CURDIR)/debian/pwauth/usr/sbin/checkfaillog
	rm $(CURDIR)/debian/pwauth/usr/sbin/unixgroup
	#
	chown root:admin $(CURDIR)/debian/pwauth/usr/sbin/pwauth
	chmod 4750 $(CURDIR)/debian/pwauth/usr/sbin/pwauth
