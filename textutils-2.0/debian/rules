#!/usr/bin/make -f
# Based on sample debian/rules that uses debhelper.
# GPL copyright 1997 to 1999 by Joey Hess.
# Copyright (C) 2000 Herbert Xu <herbert@debian.org>

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=2

build: build-stamp
build-stamp:
	dh_testdir

	if [ ! -f config.guess.old ]; then \
		mv config.guess config.guess.old; \
		mv config.sub config.sub.old; \
		cp /usr/share/automake/config.guess .; \
		cp /usr/share/automake/config.sub .; \
	fi
	[ -f Makefile ] || ./configure --prefix=/usr
	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	-$(MAKE) distclean
	if [ -f config.guess.old ]; then \
		mv config.guess.old config.guess; \
		mv config.sub.old config.sub; \
	fi

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(MAKE) prefix=`pwd`/debian/textutils/usr \
		mandir=`pwd`/debian/textutils/usr/share/man install
	mv debian/textutils/usr/bin/md5sum \
	   debian/textutils/usr/bin/md5sum.textutils
	mv debian/textutils/usr/share/man/man1/md5sum.1 \
	   debian/textutils/usr/share/man/man1/md5sum.textutils.1
	mv debian/textutils/usr/bin/cat debian/textutils/bin
	rm -r debian/textutils/usr/info

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installinfo
	dh_installchangelogs ChangeLog
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
